{
	"apps": [
		{
			"exec_mode": "fork_mode",
			"name": "goingsunny",
			"script": "app/server",
			"watch": false,
			"ignore_watch": [
				"node_modules",
				"log"
			],
			"watch_options": {
				"followSymlinks": false
			},
			"env": {
				"NODE_ENV": "development",
				"LOG": 1,
				"PORT": 5500,
				"NODE_PATH": "./app",
				"HOST_PATH": "dev.goingsunny.com"
			},
			"env_production": {
				"NODE_ENV": "production",
				"PORT": 5500,
				"NODE_PATH": "./app",
				"HOST_PATH": "goingsunny.com"
			},
			"env_staging": {
				"NODE_ENV": "staging",
				"PORT": 5500,
				"NODE_PATH": "./app",
				"HOST_PATH": "stag.goingsunny.com"
			}
		}
	]
}
